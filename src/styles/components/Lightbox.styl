.Lightbox
  z-index: 10
  position: fixed
  left: 0
  top: 0
  right: 0
  bottom: 0
  opacity: 0
  transition: all .2s ease-in-out
  pointer-events: none

  &.open
    opacity: 1
    pointer-events: auto

  .canvas
    position: absolute
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)
    width: 80%
    height: 80%
    background-color: white
    background-size: cover
    box-shadow: rgba(black, 0.2) 0px 1px 6px,
                rgba(black, 0.2) 0px 1px 4px

    &:hover
      .button
        opacity: 1

    .PhotoPreview
      width: 100%
      height: 100%

    .button
      position: absolute
      top: 50%
      transform: translateY(-50%)
      padding: 32px 12px
      font-size: 32px
      color: white
      background-color: rgba(black, 0.25)
      border: 0
      opacity: 0
      transition: all .2s ease-in-out
      cursor: pointer
      outline: none

      &:hover
        background-color: rgba(black, 0.55)

      &.left
        left: 0

      &.right
        right: 0
