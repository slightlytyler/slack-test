.PhotoPreview
  position: relative
  background-size: cover

  &:before
    content: ''
    position: absolute
    left: 0
    right: 0
    top: 0
    bottom: 0
    background: linear-gradient(to bottom, rgba(black, 0) 0%, rgba(black, 0.65) 100%)

  .details
    position: absolute
    left: 0
    bottom: 0
    padding: 12px
    color: white

    & > *:not(:last-child)
      margin-bottom: 4px

    .author
      font-size: 18px
      font-weight: 400

    .location
      font-weight: 200
